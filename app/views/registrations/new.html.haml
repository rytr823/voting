.content
  .content__new
    = form_with model: @user, url: '#', local: true do |f|
      %h2
        Sign up
      .content__new__title
          = f.label :nickname
          = f.text_field :name, class: "field", autofocus: true

          = f.label :email
          = f.email_field :email, class: "field"

          = f.label :password
          = f.password_field :password, class: "field", autocomplete: "off"

          = f.label :password_confirmation
          = f.password_field, :password_confirmation, class: "field", autocomplete: "off"  
          
          = f.submit "Sign up", class: "submit"
          